{
  "name": "edu-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": "14.16.1"
  },
  "repository": "https://github.com/erkjbro/edu-platform.git",
  "author": "Erik J Brown <erkjbro@erikjbrown.tech>",
  "description": "REST API for the edu platfrom",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "pretest": "tsc",
    "test": "DOTENV_CONFIG_PATH=.env.test mocha -r dotenv/config --timeout 5000 'dist/tests/*.js'",
    "start:build": "tsc -w",
    "start:run": "DOTENV_CONFIG_PATH=.env.development nodemon -r dotenv/config dist/index.js",
    "start:dev": "concurrently \"yarn run start:build\" \"yarn run start:run\"",
    "prestart": "tsc",
    "start": "DOTENV_CONFIG_PATH=.env.production node -r dotenv/config dist/index.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.5",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/node": "^15.0.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.8",
    "mongoose-unique-validator": "^2.0.3",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.0",
    "chai": "^4.3.4",
    "concurrently": "^6.1.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1"
  }
}
